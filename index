    <button onclick="calculateResults()">Submit</button>

    <div id="results" class="hidden">
        <div class="result" id="bounce_result"></div>
        <div class="result" id="grow_result"></div>
        <div class="result" id="flow_result"></div>
        <div class="result" id="connect_result"></div>
        <div class="result" id="future_result"></div>
        <div class="result" id="total_result"></div>
        <button onclick="generatePDF()">Generate PDF</button>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.4.0/jspdf.umd.min.js"></script>
    <script>
        function calculateResults() {
            const results = {
                bounce: {},
                grow: {},
                flow: {},
                connect: {},
                future: {}
            };

            function getRadioValue(name) {
                const element = document.querySelector(`input[name="${name}"]:checked`);
                return element ? parseInt(element.value) : 0; // Or some other default, like null
            }

            results.bounce['1a'] = getRadioValue('bounce_1a');
            results.bounce['1b'] = getRadioValue('bounce_1b');
            results.bounce['1c'] = getRadioValue('bounce_1c');

            results.grow['2a'] = getRadioValue('grow_2a');
            results.grow['2b'] = getRadioValue('grow_2b');
            results.grow['2c'] = getRadioValue('grow_2c');

            results.flow['3a'] = getRadioValue('flow_3a');
            results.flow['3b'] = getRadioValue('flow_3b');
            results.flow['3c'] = getRadioValue('flow_3c');

            results.connect['4a'] = getRadioValue('connect_4a');
            results.connect['4b'] = getRadioValue('connect_4b');
            results.connect['4c'] = getRadioValue('connect_4c');

            results.future['5a'] = getRadioValue('future_5a');
            results.future['5b'] = getRadioValue('future_5b');
            results.future['5c'] = getRadioValue('future_5c');

            results.bounce.total = results.bounce['1a'] + results.bounce['1b'] + results.bounce['1c'];
            results.grow.total = results.grow['2a'] + results.grow['2b'] + results.grow['2c'];
            results.flow.total = results.flow['3a'] + results.flow['3b'] + results.flow['3c'];
            results.connect.total = results.connect['4a'] + results.connect['4b'] + results.connect['4c'];
            results.future.total = results.future['5a'] + results.future['5b'] + results.future['5c'];
            results.total = results.bounce.total + results.grow.total + results.flow.total + results.connect.total + results.future.total;

            document.getElementById('bounce_result').innerText = `Bounce - Recovery from stress: ${results.bounce.total} /15`;
            document.getElementById('grow_result').innerText = `Grow - Learning from Adversity: ${results.grow.total} /15`;
            document.getElementById('flow_result').innerText = `Flow - Optimal Performance under pressure: ${results.flow.total} /15`;
            document.getElementById('connect_result').innerText = `Connect - Social Resilience: ${results.connect.total} /15`;
            document.getElementById('future_result').innerText = `Future-Mindedness – Positive Outlook and Purpose: ${results.future.total} /15`;
            document.getElementById('total_result').innerText = `Total Resilience Score: ${results.total} /75`;

            document.getElementById('results').classList.remove('hidden');
        }

        function generatePDF() {
            const { jsPDF } = window.jspdf;
            const doc = new jsPDF();

            var firstName = document.getElementById('firstName').value;
            const bounceResult = document.getElementById('bounce_result').innerText;
            const growResult = document.getElementById('grow_result').innerText;
            const flowResult = document.getElementById('flow_result').innerText;
            const connectResult = document.getElementById('connect_result').innerText;
            const futureResult = document.getElementById('future_result').innerText;
            const totalScoreText = document.getElementById('total_result').innerText;
            const totalScore = parseInt(totalScoreText.match(/\d+/)[0]);
            let message = "";
               if (totalScore >= 60 && totalScore <= 75) {
                   message = "High resilience - You likely thrive under pressure and grow through challenges. Maintain your habits and support others.";

               } else if (totalScore >= 45 && totalScore <= 59) {
                   message = "Moderate Resilience - You are doing well but could benefit from targeted growth in one or two areas.";

               } else if (totalScore >= 30 && totalScore <= 44) {
                   message = "Developing resilience - Some strengths are present, but there is room for growth. Focus on building consistent habits and supports.";

               } else if (totalScore < 30) {
                   message = "At risk - Consider seeking mentorship, coaching, or structured training to boost your resilience skills.";

               }

               const splitText = doc.splitTextToSize("Interpretation: " + message,230);


            doc.setFont("Arial", "bold");
            doc.setFontSize(16);
            doc.text("Building Resilience: Self Assessment Results of " + firstName, 10, 10);

            doc.setFont("Arial", "normal");
            doc.setFontSize(14);
            doc.text(bounceResult, 30, 20);
            doc.text(growResult, 30, 30);
            doc.text(flowResult, 30, 40);
            doc.text(connectResult, 30, 50);
            doc.text(futureResult, 30, 60);

            doc.setFont("Arial", "bold");
            doc.setFontSize(14);
            doc.text(totalScoreText, 10, 80);

            doc.setFont("Arial","italic");
            doc.setFontSize(14);
            doc.text(splitText, 10, 90);

            doc.save("Self-Assessment Questionnaire: Building Resilience_results.pdf"); // Corrected typo
        }
    </script>
</body>
</html>
